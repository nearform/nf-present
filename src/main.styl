@page
  size 908px 681px
  margin 0

@media print 
  .remark-slide-scaler
    width 100% !important
    height 100% !important
    transform scale(1) !important
    top 0 !important
    left 0 !important
    
body
  font-family 'Gill Sans', 'Gill Sans MT', 'sans-serif'

h1, h2, h3
  font-weight 400

b, strong
  font-weight 600
  
h1
  border-bottom double 8px #000
  padding-bottom: 5px
  text-align: center
  
ul
  font-size: 36px
  
  li
    //line-height 1.4

a, a:visited, a:active, a:link
  font-size 0.8em
  color: #74a723

.sh, .bash
  background #022550 !important
  color #dddee0 !important
  
.branded
  background-image url('./images/logo.png')
  background-position 97% 95%
  background-repeat no-repeat
  background-size 18%

.image
  text-align center
  
  ol, pre, code
    text-align left

  img
    padding-top 2.5%
    width 75%
  
.title-page
  background-position center 90%
  background-repeat no-repeat
  background-size 60%
  background-image url('./images/logo.png')
  
  &:after
    position absolute
    bottom 15px
    left 15px
    color grey
    content "© nearForm"
    
  h1
    margin-top 160px
    font-size 72px
    border none

  h3
    position absolute
    top 0px
    right 15px
    font-size 20px
    border solid 1px #000
    padding: 5px 30px 5px 30px
    
.section-title
  font-size 96px
  
figcaption
  font-size 28px